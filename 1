import React, { useState, useEffect } from 'react';
import { Plus, Search, DollarSign, Users, Clock, CheckCircle, FileText, TrendingUp, Send, X, Edit2, Save } from 'lucide-react';

const InternationalMovingCRM = () => {
  // ìƒíƒœ ê´€ë¦¬
  const [leads, setLeads] = useState([]);
  const [filteredLeads, setFilteredLeads] = useState([]);
  const [searchTerm, setSearchTerm] = useState('');
  const [selectedLead, setSelectedLead] = useState(null);
  const [showAddForm, setShowAddForm] = useState(false);
  const [activeTab, setActiveTab] = useState('dashboard');
  const [notifications, setNotifications] = useState([]);
  const [invoices, setInvoices] = useState([]);
  const [editingLead, setEditingLead] = useState(null);

  // ìƒíƒœ ì •ì˜
  const statuses = [
    { id: 'inquiry', label: 'ë¬¸ì˜ì ‘ìˆ˜', color: 'bg-blue-100 text-blue-800' },
    { id: 'quote', label: 'ê²¬ì ë°œì†¡', color: 'bg-yellow-100 text-yellow-800' },
    { id: 'contract', label: 'ê³„ì•½ì™„ë£Œ', color: 'bg-green-100 text-green-800' },
    { id: 'packing', label: 'í¬ì¥ì§„í–‰', color: 'bg-purple-100 text-purple-800' },
    { id: 'shipping', label: 'ìš´ì†¡ì¤‘', color: 'bg-orange-100 text-orange-800' },
