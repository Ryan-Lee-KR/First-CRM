                </div>
                <div>
                  <label className="block text-sm font-medium mb-1">ì—°ë½ì²˜</label>
                  <input
                    type="tel"
                    className="w-full border rounded px-3 py-2"
                    value={editingLead.phone}
                    onChange={(e) => setEditingLead({...editingLead, phone: e.target.value})}
                  />
                </div>
              </div>

              <div>
                <label className="block text-sm font-medium mb-1">ì´ë©”ì¼</label>
                <input
                  type="email"
                  className="w-full border rounded px-3 py-2"
                  value={editingLead.email || ''}
                  onChange={(e) => setEditingLead({...editingLead, email: e.target.value})}
                />
              </div>

              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium mb-1">ì¶œë°œì§€</label>
                  <input
                    type="text"
                    className="w-full border rounded px-3 py-2"
                    value={editingLead.origin}
                    onChange={(e) => setEditingLead({...editingLead, origin: e.target.value})}
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium mb-1">ë„ì°©ì§€</label>
                  <input
                    type="text"
                    className="w-full border rounded px-3 py-2"
                    value={editingLead.destination}
                    onChange={(e) => setEditingLead({...editingLead, destination: e.target.value})}
                  />
                </div>
              </div>

              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium mb-1">ì´ì‚¬ì¼</label>
                  <input
                    type="date"
                    className="w-full border rounded px-3 py-2"
                    value={editingLead.movingDate}
                    onChange={(e) => setEditingLead({...editingLead, movingDate: e.target.value})}
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium mb-1">ê²¬ì  ê¸ˆì•¡ (ì›)</label>
                  <input
                    type="number"
                    className="w-full border rounded px-3 py-2"
                    value={editingLead.quoteAmount || ''}
                    onChange={(e) => setEditingLead({...editingLead, quoteAmount: parseInt(e.target.value) || 0})}
                  />
                </div>
              </div>

              <div>
                <label className="block text-sm font-medium mb-1">ì˜ˆìƒ ë„ì°©ì¼</label>
                <input
                  type="date"
                  className="w-full border rounded px-3 py-2"
                  value={editingLead.estimatedArrival || ''}
                  onChange={(e) => setEditingLead({...editingLead, estimatedArrival: e.target.value})}
                />
              </div>

              <div>
                <label className="block text-sm font-medium mb-1">ë©”ëª¨</label>
                <textarea
                  rows="3"
                  className="w-full border rounded px-3 py-2"
                  value={editingLead.notes || ''}
                  onChange={(e) => setEditingLead({...editingLead, notes: e.target.value})}
                />
              </div>

              <div className="flex gap-3 pt-4">
                <button
                  type="submit"
                  className="flex-1 bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 flex items-center justify-center gap-2"
                >
                  <Save size={20} />
                  ì €ì¥
                </button>
                <button
                  type="button"
                  onClick={() => setEditingLead(null)}
                  className="flex-1 bg-gray-200 py-2 rounded-lg hover:bg-gray-300"
                >
                  ì·¨ì†Œ
                </button>
              </div>
            </form>
          </div>
        </div>
      );
    }

    return (
      <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
        <div className="bg-white rounded-lg p-6 max-w-4xl w-full max-h-[90vh] overflow-y-auto">
          <div className="flex justify-between items-center mb-6">
            <h3 className="text-2xl font-bold">{lead.customerName} ë‹˜</h3>
            <button onClick={() => setSelectedLead(null)}>
              <X size={24} />
            </button>
          </div>

          {/* ì§„í–‰ ë‹¨ê³„ */}
          <div className="mb-6">
            <h4 className="font-medium mb-3">ì§„í–‰ ë‹¨ê³„</h4>
            <div className="flex items-center gap-2">
              {statuses.map((status, index) => (
                <React.Fragment key={status.id}>
                  <button
                    onClick={() => updateLeadStatus(lead.id, status.id)}
                    className={`flex-1 py-3 rounded-lg text-sm font-medium transition-all ${
                      index <= currentIndex 
                        ? status.color + ' border-2 border-current'
                        : 'bg-gray-100 text-gray-400'
                    }`}
                  >
                    {status.label}
                  </button>
                  {index < statuses.length - 1 && (
                    <div className={`w-4 h-1 ${index < currentIndex ? 'bg-green-500' : 'bg-gray-300'}`} />
                  )}
                </React.Fragment>
              ))}
            </div>
            <p className="text-sm text-gray-500 mt-2">í´ë¦­í•˜ì—¬ ìƒíƒœ ë³€ê²½</p>
          </div>

          {/* ê³ ê° ì •ë³´ */}
          <div className="grid grid-cols-2 gap-6 mb-6">
            <div className="space-y-4">
              <div>
                <p className="text-sm text-gray-500">ì—°ë½ì²˜</p>
                <p className="font-medium">{lead.phone}</p>
              </div>
              <div>
                <p className="text-sm text-gray-500">ì´ë©”ì¼</p>
                <p className="font-medium">{lead.email || '-'}</p>
              </div>
              <div>
                <p className="text-sm text-gray-500">ì¶œë°œì§€ â†’ ë„ì°©ì§€</p>
                <p className="font-medium">{lead.origin} â†’ {lead.destination}</p>
              </div>
            </div>
            
            <div className="space-y-4">
              <div>
                <p className="text-sm text-gray-500">ì´ì‚¬ ì˜ˆì •ì¼</p>
                <p className="font-medium">{lead.movingDate}</p>
              </div>
              <div>
                <p className="text-sm text-gray-500">ê²¬ì  ê¸ˆì•¡</p>
                <p className="font-medium text-lg text-blue-600">
                  {lead.quoteAmount ? `${lead.quoteAmount.toLocaleString()}ì›` : 'ë¯¸ì •'}
                </p>
              </div>
              <div>
                <p className="text-sm text-gray-500">ë“±ë¡ì¼</p>
                <p className="font-medium">{new Date(lead.createdAt).toLocaleDateString('ko-KR')}</p>
              </div>
            </div>
          </div>

          {/* ë©”ëª¨ */}
          {lead.notes && (
            <div className="mb-6">
              <p className="text-sm text-gray-500 mb-1">ë©”ëª¨</p>
              <div className="bg-gray-50 p-4 rounded-lg">
                <p>{lead.notes}</p>
              </div>
            </div>
          )}

          {/* ì•¡ì…˜ ë²„íŠ¼ */}
          <div className="flex gap-3 pt-4 border-t">
            <button
              onClick={() => setEditingLead(lead)}
              className="flex-1 bg-gray-500 text-white py-3 rounded-lg hover:bg-gray-600 flex items-center justify-center gap-2"
            >
              <Edit2 size={20} />
              ì •ë³´ ìˆ˜ì •
            </button>
            <button
              onClick={() => createInvoice(lead)}
              className="flex-1 bg-green-500 text-white py-3 rounded-lg hover:bg-green-600 flex items-center justify-center gap-2"
              disabled={!lead.quoteAmount}
            >
              <FileText size={20} />
              ì¸ë³´ì´ìŠ¤ ìƒì„±
            </button>
            <button
              onClick={() => setSelectedLead(null)}
              className="flex-1 bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600"
            >
              ë‹«ê¸°
            </button>
          </div>
        </div>
      </div>
    );
  };

  return (
    <div className="min-h-screen bg-gray-100">
      {/* í—¤ë” */}
      <div className="bg-white shadow">
        <div className="max-w-7xl mx-auto px-4 py-4">
          <h1 className="text-2xl font-bold text-gray-900">ğŸšš í•´ì™¸ ì´ì‚¬ CRM ì‹œìŠ¤í…œ</h1>
          <p className="text-sm text-gray-500">ê³ ê° ë¦¬ë“œ ê´€ë¦¬ ë° ìë™ ì•Œë¦¼ ì‹œìŠ¤í…œ</p>
        </div>
      </div>

      {/* ë„¤ë¹„ê²Œì´ì…˜ */}
      <div className="bg-white border-b">
        <div className="max-w-7xl mx-auto px-4">
          <div className="flex gap-4">
            {[
              { id: 'dashboard', label: 'ëŒ€ì‹œë³´ë“œ', icon: TrendingUp },
              { id: 'leads', label: 'ë¦¬ë“œ ê´€ë¦¬', icon: Users },
              { id: 'invoices', label: 'ì¸ë³´ì´ìŠ¤', icon: FileText }
            ].map(tab => (
              <button
                key={tab.id}
                onClick={() => setActiveTab(tab.id)}
                className={`flex items-center gap-2 px-4 py-3 border-b-2 transition-colors ${
                  activeTab === tab.id
                    ? 'border-blue-500 text-blue-600'
                    : 'border-transparent text-gray-600 hover:text-gray-900'
                }`}
              >
                <tab.icon size={20} />
                {tab.label}
              </button>
            ))}
          </div>
        </div>
      </div>

      {/* ë©”ì¸ ì½˜í…ì¸  */}
      <div className="max-w-7xl mx-auto px-4 py-6">
        {activeTab === 'dashboard' && <Dashboard />}
        {activeTab === 'leads' && <LeadsManagement />}
        {activeTab === 'invoices' && <InvoiceManagement />}
      </div>

      {/* ëª¨ë‹¬ë“¤ */}
      {showAddForm && <AddLeadForm />}
      {selectedLead && <LeadDetail lead={selectedLead} />}
    </div>
  );
};

export default InternationalMovingCRM;
